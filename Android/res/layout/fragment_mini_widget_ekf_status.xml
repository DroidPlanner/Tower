<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="3dp">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/ekf_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_widget_vehicle_diagnostics"
        android:textColor="@color/greyText"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ekf_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_help_grey_600_18dp"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="@string/title_ekf_status_viewer" />

        <TextView
            android:id="@+id/vibration_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_help_grey_600_18dp"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="@string/title_vibration_viewer" />

    </LinearLayout>

</LinearLayout>
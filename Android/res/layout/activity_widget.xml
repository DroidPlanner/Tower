<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionbar_container"
        layout="@layout/actionbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        layout="@layout/widget_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar_container" />

    <include
        layout="@layout/button_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/actionbar_container"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="8dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/widget_button_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sololink_take_picture_button"
                style="@style/flightControlButton.Row"
                android:drawableTop="@drawable/ic_camera_alt_black_36dp"
                android:text="Photo" />

            <Button
                android:id="@+id/sololink_record_video_button"
                style="@style/flightControlButton.Row"
                android:drawableTop="@drawable/ic_videocam_black_36dp"
                android:text="Record" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
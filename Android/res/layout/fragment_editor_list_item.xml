<?xml version="1.0" encoding="utf-8"?>

<!--
Used to Style the horizontal list of mission items.
-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dragHandler"
    android:layout_width="wrap_content"
    android:minWidth="70dp"
    android:minHeight="60dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_mission_button"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/rowNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="44"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/editor_list_item_text_size"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rowNameView"
        android:src="@drawable/ic_mission_wp"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/rowAltitudeView"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200m"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/desc_rect"
    android:orientation="vertical"
    android:padding="3dp"
    android:gravity="center_horizontal"
    tools:showIn="@layout/fragment_three_pv">

    <!-- Follow Type Spinner -->

    <Spinner
        android:id="@+id/follow_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <!-- Altitude buttons -->

    <TextView
        android:id="@+id/guided_altitude"
        style="@style/modeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude: (10m)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_altitude_plus_1"
            style="@style/modeControl"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/button_mode_options"
            android:text="+1"/>

        <Button
            android:id="@+id/button_altitude_minus_1"
            style="@style/modeControl"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/button_mode_options"
            android:text="-1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_altitude_plus_10"
            style="@style/modeControl"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/button_mode_options"
            android:text="+10"/>

        <Button
            android:id="@+id/button_altitude_minus_10"
            style="@style/modeControl"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:background="@drawable/button_mode_options"
            android:text="-10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical"
        android:padding="3dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/follow_radius"
            style="@style/modeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radius: (10m)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button_radius_plus_1"
                style="@style/modeControl"
                android:layout_width="76dp"
                android:layout_height="64dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_mode_options"
                android:text="+"/>

            <Button
                android:id="@+id/button_radius_minus_1"
                style="@style/modeControl"
                android:layout_width="76dp"
                android:layout_height="64dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_mode_options"
                android:text="-"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
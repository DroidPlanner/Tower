<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="80dp"
    android:minHeight="60dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/event_thumbnail"
        android:layout_width="wrap_content"
        android:minWidth="80dp"
        android:minHeight="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/position_event_thumbnail_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:id="@+id/event_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            tools:text="44"
            />

        <TextView
            android:id="@+id/event_altitude"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/event_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2000.00m"
            android:drawableLeft="@drawable/ic_file_upload_grey_700_18dp"
            android:drawableStart="@drawable/ic_file_upload_grey_700_18dp"
            android:drawablePadding="5dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
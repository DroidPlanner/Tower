<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <co.aerobotics.android.view.spinnerWheel.WheelHorizontalView
        android:id="@+id/horizontalSpinnerWheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:isAllVisible="false"
        app:isCyclic="false"
        app:itemsDimmedAlpha="150"
        app:selectionDivider="@color/secondary_dark_blue"
        app:selectionDividerActiveAlpha="100"
        app:selectionDividerDimmedAlpha="255"
        app:selectionDividerWidth="2dp"
        app:visibleItems="3"
        tools:layout_height="match_parent"
        tools:layout_width="100dp" />

    <EditText
        android:id="@+id/numberInputText"
        style="@style/missionItemNumberPickerView"
        tools:text="22"
        android:layout_gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:imeOptions="actionDone"
        android:visibility="invisible"
        android:layout_width="60dp"
        />
</FrameLayout>
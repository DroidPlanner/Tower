                android:textColor="#fff"/>

            <Spinner
                android:id="@+id/spinnerFM6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:entries="@array/FligthMode_CopterV3_1"/>

            <CheckBox
                android:id="@+id/checkBoxFM6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/checkBoxFMS6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>
</ScrollView>
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="@string/setup_fm_mode4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"/>

            <Spinner
                android:id="@+id/spinnerFM4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:entries="@array/FligthMode_CopterV3_1"/>

            <CheckBox
                android:id="@+id/checkBoxFM4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/checkBoxFMS4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:id="@+id/layoutFM5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="@string/setup_fm_mode5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"/>

            <Spinner
                android:id="@+id/spinnerFM5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:entries="@array/FligthMode_CopterV3_1"/>

            <CheckBox
                android:id="@+id/checkBoxFM5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/checkBoxFMS5"
                android:layout_width="0dp"

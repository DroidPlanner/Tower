<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="tinyText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="smallTelemetryText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>
		</style>

	<style name="textLabels">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">8dp</item>
      	<item name="android:layout_marginBottom">-6dp</item>
        </style>

	<style name="RPYtextLabels">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">13sp</item>
      	<item name="android:layout_marginLeft">0dp</item>
        </style>

    <style name="unitText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>
	</style>

    <style name="largeTelemetryText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">right</item>
        </style>

    <style name="actionButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">#000000</item>
        <item name="android:textSize">13dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="editorButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">2dp</item>
        		<item name="android:gravity">center_vertical|right</item>
        	</style>



    <style name="transparentLayout">
        <item name="android:background">#aa000000</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme.ActionBar</item>
		<item name="android:actionMenuTextAppearance">@style/CustomActionBarTheme.ActionBar.Text</item>
		<item name="android:actionBarDivider">@null</item>

		<item name="android:popupMenuStyle">@style/MyPopupMenu</item>
		<item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>

	</style>

	<style name="CustomActionBarTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/action_texture</item>
		<item name="android:titleTextStyle">@style/CustomActionBarTheme.ActionBar.TitleTextStyle</item>
	    <item name="android:subtitleTextStyle">@style/CustomActionBarTheme.ActionBar.Text</item>
     </style>


	<style name="CustomActionBarTheme.ActionBar.Text" parent="@android:style/TextAppearance">
		<item name="android:textSize">16dp</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<style name="CustomActionBarTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#FFF</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">16dp</item>
	</style>



	 <!-- Popup Menu Style -->
	<style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
		<item name="android:popupBackground">#ffffff</item>
	</style>
	<style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.TextView.PopupMenu">
		<item name="android:textColor">#000000</item>
	</style>

    <!-- Navigation drawer style -->
    <style name="NavDrawer">
        <item name="android:layout_width">@dimen/nav_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/nav_drawer_background</item>
    </style>

    <style name="NavHubDrawer" parent="NavDrawer">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="NavMenuDrawer" parent="NavDrawer">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginBottom">@dimen/bottom_bar_height</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:id">@id/bottom_bar_id</item>
        <item name="android:background">#a0000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>

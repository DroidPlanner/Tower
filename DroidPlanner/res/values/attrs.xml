<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SeekBarWithText">
        <attr name="title" format="string" />
        <attr name="unit" format="string" />
        <attr name="formatString" format="string" />
        <attr name="min" format="float" />
        <attr name="inc" format="float" />
        <attr name="max" format="float" />
    </declare-styleable>
    <declare-styleable name="FillBar">
        <attr name="percentage" format="float" />
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="HUD">
        <attr name="skyColor" format="color" />
        <attr name="groundColor" format="color" />
        <attr name="reticleColor" format="color" />
        <attr name="reticleRadius" format="dimension" />
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color" />
        <attr name="failsafeTextSize" format="dimension" />
        <attr name="failsafeTextPadding" format="dimension" />
        <attr name="scrollerBgColor" format="color"/>

        <!-- Yaw related properties -->
        <attr name="topBarBgColor" format="color" />
        <attr name="topBarHeight" format="dimension" />

        <!-- Pitch related properties -->
        <attr name="pitchScaleWidth" format="dimension" />

        <!-- Info bar properties -->
        <attr name="bottomBarHeight" format="dimension" />
        <attr name="bottomBarBgColor" format="color" />
        <attr name="bottomBarVerticalPadding" format="dimension" />
        <attr name="bottomBarHorizontalPadding" format="dimension" />
    </declare-styleable>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLayoutMissionControl"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >

	<Button
	    android:id="@+id/mc_joystickBtn"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_control"
		android:visibility="gone"
	    android:text="Control" />

	<Button
	    android:id="@+id/mc_planningBtn"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_edit"
	    android:text="Edit" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"/>

	<Button
	    android:id="@+id/mc_homeBtn"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_home"
	    android:text="Home" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

	<Button
	    android:id="@+id/mc_land"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_land"
	    android:text="Land"
	    tools:ignore="ContentDescription" />

	<Button
	    android:id="@+id/mc_takeoff"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_takeoff"
	    android:text="Takeoff"
		android:visibility="gone"
	    tools:ignore="ContentDescription" />

	<Button
	    android:id="@+id/mc_loiter"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_loiter"
	    android:text="Loiter"
	    tools:ignore="ContentDescription" />

	<Button
	    android:id="@+id/mc_follow"
	    style="@style/actionButton"
	    android:layout_width="75dp"
	    android:layout_height="match_parent"
	    android:background="@drawable/button_macro"
	    android:drawableTop="@drawable/ic_follow"
	    android:text="Follow"
	    tools:ignore="ContentDescription" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.droidplanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.droidplanner.widgets.spinners.SpinnerSelfSelect
        android:id="@+id/spinnerWaypointType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/ExampleWaypointType" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
                android:id="@+id/altitudeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                custom:inc="5"
                custom:max="1000"
                custom:min="0"
                custom:title="@string/waypoint_altitude"
                custom:unit="m" >
            </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>

            <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
                android:id="@+id/loiterTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                custom:inc="1"
                custom:max="100"
                custom:min="0"
                custom:title="@string/loiter_turn"
                custom:unit="turns" >
            </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>

            <FrameLayout
                android:id="@+id/optionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@string/loiter_ccw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="@string/loiter_ccw" />

                <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
                    android:id="@+id/loiterRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    custom:inc="1"
                    custom:max="100"
                    custom:min="0"
                    custom:title="@string/loiter_radius"
                    custom:unit="m" >
                </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>
            </FrameLayout>

            <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
                android:id="@+id/waypointAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                custom:inc="5"
                custom:max="360"
                custom:min="0"
                custom:title="@string/waypoint_angle"
                custom:unit="Â°" >
            </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waypointInfo_LoiterN" />

</LinearLayout>
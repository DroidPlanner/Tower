<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.droidplanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.droidplanner.widgets.spinners.SpinnerSelfSelect
        android:id="@+id/spinnerWaypointType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/ExampleCameraArray" />

    <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
        android:id="@+id/altitudeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        custom:inc="5"
        custom:max="1000"
        custom:min="0"
        custom:title="@string/waypoint_altitude"
        custom:unit="m" >
    </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>

    <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
        android:id="@+id/waypointDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        custom:inc="1"
        custom:max="600"
        custom:min="0"
        custom:title="@string/waypoint_delay"
        custom:unit="s" >
    </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>

    <com.droidplanner.widgets.SeekBarWithText.SeekBarWithText
        android:id="@+id/waypointAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        custom:inc="5"
        custom:max="360"
        custom:min="0"
        custom:title="@string/waypoint_angle"
        custom:unit="Â°" >

    </com.droidplanner.widgets.SeekBarWithText.SeekBarWithText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waypointInfo_Waypoint" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/configLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" xmlns:app="http://schemas.android.com/apk/res/org.droidplanner">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ground_speed_label"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbxFence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setup_fs_fnc_enable"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFM1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextViewFenceAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="@string/setup_fs_fnc_type_options"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spinnerFenceType"
                    style="@style/ModeSpinnerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/FligthMode_CopterV3_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewTune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="@string/setup_fs_fnc_action_options"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <Spinner
                    android:id="@+id/spinnerFenceAction"
                    style="@style/ModeSpinnerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/FligthMode_CopterV3_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit
                    android:id="@+id/numberFieldEditMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:FastInc="1"
                    app:Format="%.0f"
                    app:Inc="1"
                    app:Max="10"
                    app:Min="1"
                    app:Separator=" :"
                    app:TextAppearance="?android:attr/textAppearanceMedium"
                    app:TextColor="#fff"
                    app:Title="@string/setup_fs_fnc_margin"
                    app:Unit="m" >

                </org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit>

                <org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit
                    android:id="@+id/numberFieldEditRadius"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:FastInc="100"
                    app:Format="%.0f"
                    app:Inc="10"
                    app:Max="10000"
                    app:Min="30"
                    app:Separator=" :"
                    app:TextAppearance="?android:attr/textAppearanceMedium"
                    app:TextColor="#fff"
                    app:Title="@string/setup_fs_fnc_radius"
                    app:Unit="m" >

                </org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit>

                <org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit
                    android:id="@+id/numberFieldEditAltitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:FastInc="20"
                    app:Format="%.0f"
                    app:Inc="10"
                    app:Max="1000"
                    app:Min="10"
                    app:Separator=" :"
                    app:TextAppearance="?android:attr/textAppearanceMedium"
                    app:TextColor="#fff"
                    app:Title="@string/setup_fs_fnc_altitude"
                    app:Unit="m" >

                </org.droidplanner.widgets.NumberFieldEdit.NumberFieldEdit>
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
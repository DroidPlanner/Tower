<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_centerInParent="true">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<RadioButton
    	android:id="@+id/editor_tools_marker"
	    style="@style/editorButton"
    	android:button="@null"
        android:layout_width="75dp"
        android:layout_height="75dp"
	    android:background="@drawable/button_editor"
		/>

		<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_editor_wp"
		/>

	</RelativeLayout>


	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<RadioButton
    	android:id="@+id/editor_tools_draw"
	    style="@style/editorButton"
    	android:button="@null"
        android:layout_width="75dp"
        android:layout_height="75dp"
	    android:background="@drawable/button_editor"
		/>

		<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_editor_draw"
		/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<RadioButton
    	android:id="@+id/editor_tools_poly"
	    style="@style/editorButton"
    	android:button="@null"
        android:layout_width="75dp"
        android:layout_height="75dp"
	    android:background="@drawable/button_editor"
		/>

		<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_editor_poly"
		/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<RadioButton
    	android:id="@+id/editor_tools_trash"
	    style="@style/editorButton"
    	android:button="@null"
        android:layout_width="75dp"
        android:layout_height="75dp"
	    android:background="@drawable/button_editor_trash"
		/>

		<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_editor_trash"
		/>

	</RelativeLayout>

</RadioGroup>

